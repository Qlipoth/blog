extends ../global.jade

block title
  title admin index

block content
  script(src='./js/pageControllers/admin/charts.js')
  script(src='./js/pageControllers/admin/admin.js')
  .container.text-center
    .form-group
      h2.clearfix
        span.pull-md-left
          | Создать пост
    .row
      form
        .col-md-12
          .form-group
            h5 Название
            input.form-control#title(type='text', placeholder='Title Post')
          .form-group
            h5 Тэги
            input.form-control#tags(type="text")
        .col-md-12
          .form-group
            h5 Содержимое
            #content.fr-view
        .col-md-12
          br
          button#create_post.btn.btn-success(type='button') Создать
    .row
      .form-group
        h2 Список постов

      table.table.text-left
        tr
          th ID
          th TITLE
        each post in posts
          tr
            td #{post.id}
            td
              a(href='/post/watch/#{post.id}') #{post.title}
            td
              button.btn.btn-info.delete_button(data-id='#{post.id}' data-date='#{post.createdAt}') Удалить
            td
              a.btn.btn-info(href='/admin/edit/#{post.id}') Редактировать
